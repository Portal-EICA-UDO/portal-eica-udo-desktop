---
const {
  imageSrc = "/images/placeholder.png",
  title = "",
  buttonLeyend = "Saber mas",
  href = "#",
} = Astro.props;
---

<section
  class="w-[202px] h-[338px] bg-white/80 rounded-lg shadow sm:shadow-md overflow-hidden border border-white/10 flex flex-col"
>
  <!-- imagen -->
  <div
    class="h-[262px] px-2.5 pt-2.5 dark:bg-gray-700 flex items-center justify-center overflow-hidden"
  >
    <img src={imageSrc} class="w-full h-full object-cover rounded-lg" />
  </div>

  <!-- contenido -->
  <div class="pt-1.5 h-16.5 flex flex-col justify-between">
    <h3 class="text-center h-[19px]">{title}</h3>

    <div class="mt-1 flex justify-center">
      <slot name="action" />
    </div>
  </div>
</section>
