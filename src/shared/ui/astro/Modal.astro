---
// ...existing code...
interface Props {
  imageSrc?: string;
  imageAlt?: string;
  title?: string;
  subtitle?: string;
  buttonLabel?: string;
  readonly?: boolean;
}

const {
  imageSrc = "",
  imageAlt = "imagen",
  title = "",
  subtitle = "",
  buttonLabel = "",
} = Astro.props;
---

<article class="max-w-4xl overflow-hidden bg-white">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 p-6 items-start">
    <!-- Imagen/Avatar -->
    <div class="flex items-start justify-center sm:justify-start">
      <div class="w-48 h-48 bg-gray-200 rounded-md overflow-hidden shrink-0">
        {
          imageSrc ? (
            <img
              src={imageSrc}
              alt={imageAlt}
              class="w-full h-full object-cover"
            />
          ) : (
            <div class="w-full h-full bg-gray-300 flex items-center justify-center text-gray-500">
              <span class="text-sm">No image</span>
            </div>
          )
        }
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="sm:col-span-2 flex flex-col">
      <header class="mb-3">
        {title && <h3 class="text-xl font-semibold text-gray-900">{title}</h3>}
        {subtitle && <p class="text-sm text-gray-500 mt-1">{subtitle}</p>}
      </header>

      <!-- Slot para contenido extendido (texto, listas, etc.) -->
      <div class="prose prose-sm max-w-none text-gray-700 mb-6">
        <slot name="content">
          <!-- contenido por defecto -->
          <p>
            Contenido de la tarjeta. Usa el slot "content" para pasar tu
            HTML/texto.
          </p>
        </slot>
      </div>

      <!-- Footer / acciones -->
      <div
        class="mt-auto flex items-center justify-center sm:justify-start gap-4"
      >
        <slot name="actions">
          {
            buttonLabel ? (
              <button
                type="button"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#0A5C8D] text-white hover:bg-[#084a6b] transition"
              >
                {buttonLabel}
              </button>
            ) : null
          }
        </slot>
      </div>
    </div>
  </div>
</article>

