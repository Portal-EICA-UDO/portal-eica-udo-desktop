---
// ...existing code...
interface Props {
  imageSrc?: string;
  imageAlt?: string;
  title?: string;
  lastName?: string;
  subtitle?: string;
  buttonLabel?: string;
  email?: string;
  phone?: string;
  position?: string;
  carreras?: [];
  pensum?: []; 
  readonly?: boolean;
  materias?: [];
}

const {
  imageSrc = "",
  imageAlt = "imagen",
  title = "",
  lastName = "",
  subtitle = "",
  email = "",
  phone = "",
  position = "",
  carreras = "",
  buttonLabel = "",
  pensum = "",
  materias = "",
} = Astro.props;
---

<article class="max-w-4xl overflow-hidden bg-white">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 p-6 items-start">
    <!-- Imagen/Avatar -->
    <div class="flex items-start justify-center sm:justify-start h-full">
      <div
        class="bg-gray-200 rounded-md overflow-hidden shrink-0 w-full h-full"
      >
        {
          imageSrc ? (
            <img
              src={imageSrc}
              alt={imageAlt}
              class="w-full h-full object-cover"
            />
          ) : (
            <div class="w-full h-full bg-gray-300 flex items-center justify-center text-gray-500 ">
              <span class="text-sm">No image</span>
            </div>
          )
        }
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="sm:col-span-2 flex flex-col">
      <header class="mb-3">
        {
          title && (
            <h3 class="text-(length:--font-sub-tittle) font-semibold text-gray-900">
              {title} {lastName}
            </h3>
          )
        }
        {
          subtitle && (
            <p class="text-sm text-gray-500 mt-1 text-justify">{subtitle}</p>
          )
        }
      </header>

      <!-- Slot para contenido extendido (texto, listas, etc.) -->
      <div class="prose prose-sm max-w-none text-gray-700 mb-6">
        <slot name="content">
          <!-- contenido por defecto -->
          {email ? <h3>Correo electronico: {email}</h3> : null}
          {phone ? <h3>Telefono: {phone}</h3> : null}
          {position ? <h3>Cargo: {position}</h3> : null}
          {position == "Docente" ? (
            <>
              {pensum.map((pensum, i) =><h3>Materia {i+1}: {pensum.materia} de la carrera {pensum.carrera}</h3>)}
            </>
          ) : null}
        </slot>
      </div>

      <!-- Footer / acciones -->
      <div
        class="mt-auto flex items-center justify-center sm:justify-start gap-4"
      >
        <slot name="actions">
          {
            buttonLabel ? (
              <button
                type="button"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#0A5C8D] text-white hover:bg-[#084a6b] transition"
              >
                {buttonLabel}
              </button>
            ) : null
          }
        </slot>
      </div>
    </div>
  </div>
</article>

