---
interface Props {
  imageSrc?: string;
  imageAlt?: string;
  title?: string;
  lastName?: string;
  subtitle?: string;
  buttonLabel?: string;
  email?: string;
  phone?: string;
  position?: string;
  carreras?: [];
  pensum?: []; 
  readonly?: boolean;
  materias?: Array<{
    id: number;
    nombre: string;
    carrera?: {
      id: number;
      nombre: string;
    } | null;
  }>;
}

const {
  imageSrc = "",
  imageAlt = "Imagen del staff",
  title = "",
  lastName = "",
  subtitle = "",
  email = "",
  phone = "",
  position = "",
  carreras = [],
  buttonLabel = "",
  pensum = [],
  materias = [],
} = Astro.props;
---

<article class="max-w-4xl overflow-hidden bg-white rounded-lg shadow-lg">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 p-6 sm:p-8 items-start">
    <!-- Imagen/Avatar -->
    <div class="flex items-start justify-center sm:justify-start h-full">
      <div class="bg-gray-200 rounded-md overflow-hidden shrink-0 w-full h-64 sm:h-80">
        {
          imageSrc ? (
            <img
              src={imageSrc}
              alt={imageAlt}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          ) : (
            <div class="w-full h-full bg-gray-300 flex items-center justify-center text-gray-500">
              <span class="text-sm">Sin imagen</span>
            </div>
          )
        }
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="sm:col-span-2 flex flex-col">
      <header class="mb-4 sm:mb-6">
        {
          title && (
            <h3 class="text-2xl sm:text-3xl font-bold text-gray-900">
              {title} {lastName}
            </h3>
          )
        }
        {
          subtitle && (
            <p class="text-lg text-gray-600 mt-2">{subtitle}</p>
          )
        }
        {
          position && (
            <p class="text-lg text-[#0A5C8D] font-medium mt-2">{position}</p>
          )
        }
      </header>

      <!-- InformaciÃ³n de contacto -->
      <div class="space-y-3 mb-6 sm:mb-8">
        {email ? (
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <span class="text-gray-700">{email}</span>
          </div>
        ) : null}
        
        {phone ? (
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <span class="text-gray-700">{phone}</span>
          </div>
        ) : null}
      </div>

      <!-- Materias del docente - FORMATO SIMPLE -->
      {
        position === "Docente" && materias && materias.length > 0 ? (
          <div class="mb-6 sm:mb-8">
            <h4 class="text-lg font-semibold text-gray-900 mb-3">Materias que imparte:</h4>
            <ul class="space-y-2">
              {materias.map((materia, i) => (
                <li class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-[#0A5C8D] shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <div>
                    <span class="text-gray-700">
                      {materia.nombre}
                      {materia.carrera ? (
                        <span class="text-gray-600 ml-1">
                          de la carrera <span class="font-medium">{materia.carrera.nombre}</span>
                        </span>
                      ) : (
                        <span class="text-gray-500 italic ml-1">(sin carrera asignada)</span>
                      )}
                    </span>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ) : position === "Docente" ? (
          <div class="mb-6 sm:mb-8">
            <h4 class="text-lg font-semibold text-gray-900 mb-3">Materias que imparte:</h4>
            <p class="text-gray-500 italic">No hay materias asignadas</p>
          </div>
        ) : null
      }

      <!-- Footer / acciones -->
      <div class="mt-auto pt-6 border-t border-gray-200">
        <slot name="actions">
          {
            buttonLabel ? (
              <button
                type="button"
                class="inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full bg-[#0A5C8D] text-white font-medium hover:bg-[#084a6b] transition-colors duration-200 w-full sm:w-auto"
              >
                {buttonLabel}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>
            ) : null
          }
        </slot>
      </div>
    </div>
  </div>
</article>

<style>
  /* Estilos responsivos adicionales */
  @media (max-width: 640px) {
    .grid-cols-1 {
      grid-template-columns: 1fr;
    }
  }
</style>